alias ls='ls -Fh'
alias l='ls -l'
alias la='ls -la'
alias ne='emacs -nw'
alias j='jobs'
alias grep="grep --color=auto"
alias mkdir='nocorrect mkdir -p'
alias find='noglob find'

alias reload="source ~/.zshrc && echo \"$fg[green]Sourced ~/.zshrc$fg[default]\""
alias gnus='emacs -f gnus'
alias tmux="if tmux has; then tmux attach; else tmux new; fi"

if [ ${USER} = "plenar_d" ]
then
    alias bye='kdestroy;kill -9 -1'
    alias msg='ns_send_msg'
else
    alias bye='kill -9 -1'
fi
